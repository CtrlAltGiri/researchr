          iframe.absolute.inset-0(width='100%', height='100%', frameborder='0', title='map', marginheight='0', marginwidth='0', scrolling='no', src='https://maps.google.com/maps?width=100%&height=600&hl=en&q=(IIT%20Madras%20)&ie=UTF8&t=&z=14&iwloc=B&output=embed')
          .bg-white.relative.flex.flex-wrap.py-6
            .px-6(class='lg:w-1/2')
              h2.title-font.font-medium.text-gray-900.tracking-widest.text-sm ADDRESS
              p.leading-relaxed Nirmaan, IIT Madras, Chennai-36
            .px-6.mt-4(class='lg:w-1/2 lg:mt-0')
